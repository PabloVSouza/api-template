{
  "include": [
    "./src/",
    "./src/**/*.d.ts"  
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "controllers/*": ["./src/controllers/*"],
      "scripts/*": ["./src/scripts/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"]
    }
  }
}
